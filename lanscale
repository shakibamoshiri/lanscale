private::hub_list(){
    declare -n __server=${1};
    declare -n __hub=${2};

    declare lanscale_ssh_fn="function lanscale_ssh_fn(){
        set -x;
        # HubList
        ${__server[cmd]} localhost:443 /SERVER /HUB: /PASSWORD:${__server[pass]} /CSV /CMD \
